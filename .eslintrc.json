{
	"env": {
		"browser": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"tsconfigRootDir": "."
	},
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking",
		"xo",
		"xo-typescript",
		"prettier"
	],
	"overrides": [
		{
			"files": ["**/*.test.ts"],
			"globals": {
				"describe": "readonly",
				"expect": "readonly",
				"it": "readonly",
				"artifacts": "readonly",
				"contract": "readonly",
				"beforeEach": "readonly",
				"before": "readonly",
				"afterEach": "readonly",
				"after": "readonly"
			}
		}
	]
}
