		"jsdom": "^13.0.0",
		"lit-html": "^0.13.0",
		"mutationobserver-shim": "^0.3.2",
		"rxjs": "^6.3.3",
		"typescript": "^3.1.6"
	},
	"devDependencies": {
		"@types/expect.js": "^0.3.29",
		"@types/jsdom": "^12.2.0",
		"@types/mocha": "^5.2.5",
